{% extends "layout.jinja2" %}
{% block body %}
<h1>Edit entry</h1>
<p>date created</p>
<form>
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" required autofocus value="{{ title }}">
    </div>
    <div class="form-group">
        <label>Body</label>
        <textarea class="form-control" rows="3" placeholder="Body of entry to be eddited" required>{{ body }}</textarea>
    </div>
    <button type="submit" class="btn btn-default" disabled>Submit</button>
</form>
{% endblock %}
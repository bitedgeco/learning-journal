{% extends "layout.jinja2" %}
{% block body %}
<h1>New entry</h1>
<form>
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" placeholder="Title" required autofocus>
    </div>
    <div class="form-group">
        <label>Body</label>
        <textarea class="form-control" rows="3" placeholder="Body" required></textarea>
    </div>
    <button type="submit" class="btn btn-default" disabled>Submit</button>
</form>
{% endblock %}